---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="details">
  <summary class="summary">
    <span class="summary-inner"
      >{title}<img
        src="/icons/FaAngleDown.svg"
        alt="accordion open"
        class="summary-icon"
      /></span
    >
  </summary>
  <div class="content">
    <slot />
  </div>
</details>

<style>
  .details {
    &[open] .summary-icon {
      transform: rotate(180deg);
    }

    &[open] .summary {
      border-bottom: none;
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
    }
  }

  .summary {
    cursor: pointer;
    display: block;
    list-style: none;
    background: #fff;
    border: 1px solid #d6d3d0;
    border-radius: 6px;
    padding: var(--space-s);
  }
  .summary::-webkit-details-marker {
    display: none;
  }

  .summary-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    line-height: 1rem;
  }

  .content {
    background-color: var(--color-background);
    padding: var(--space-s);
    border: 1px solid #d6d3d0;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    border-top: none;
  }
</style>
